 <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        获取永久素材列表
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">获取永久素材列表</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        
        <div class="box-body">
            
            <h4>
                <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = "image", offset = 0, count = 1})" class="btn btn-info">图片总数量：@ViewBag.image_count</a>
         <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = "voice",offset=0,count=20 })" class="btn btn-info">语音总数量：@ViewBag.voice_count</a> 
            <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = "video", offset = 0, count = 20 })" class="btn btn-info">视频总数量：@ViewBag.video_count</a> 
                <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = "news", offset = 0, count = 20 })" class="btn btn-primary">图文消息总数量：@ViewBag.news_count</a> 
            </h4>
            <h5>
                消息总数：@ViewBag.total_count   本次提取总数：@ViewBag.item_count
                @if (ViewBag.nextoffset > ViewBag.count)
                {  <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = ViewBag.type, offset = ViewBag.nextoffset-2, count = ViewBag.count })" class="btn btn-warning btn-xs">上一页</a>
                }
                
                @if (ViewBag.nextoffset < ViewBag.total_count)
                {  <a href="@Url.Action("GetForeverMaterialList", "WechatMaterial", new { type = ViewBag.type, offset = ViewBag.nextoffset, count = ViewBag.count })" class="btn btn-warning btn-xs">下一页</a>
                 }
                
                
            </h5>

                @if (ViewBag.total_count == 0)
                {
                    <h6 class="text-red">
                        @Html.Raw(ViewBag.type + "类型的数量为0")
                    </h6>


                }
                else
                {
                    if (ViewBag.type == "news")
                    {
                        <h6 class="text-red">
                            @Html.Raw("图文消息请在微信后台自行查看即可。")
                        </h6>
                    
                    <table class="table table-bordered">

                    <tr>
                        <th>media_id</th>
                        <th>name</th>
                        <th>update</th>
                        <th>url</th>
                    </tr>
                    @foreach (var xitem in (IEnumerable<Wechat.ForeverNewsMaterialItem>)ViewData["NewsMaterialItems"])
                    {
                        <tr>
                            <td colspan="1">@xitem.media_id</td> 
                            <td colspan="2">@xitem.content.ToString()</td> 
                            <td colspan="1">@xitem.update_time</td> 
                        </tr>
                       
                        

                    }
                </table> 
                    
                    
                    }
                    else
                    {
                     <table class="table table-bordered">

                    <tr>
                        <th>media_id</th>
                        <th>name</th>
                        <th>update</th>
                        <th>url</th>
                    </tr>
                    @foreach (var item in (IEnumerable<Wechat.ForeverMaterialItem>)ViewData["MaterialItems"])
                    {
                        <tr>
                            <td>@item.media_id</td>
                            <td>@item.name</td>
                            <td>@item.update_time</td>
                            <td>@item.url</td>
                        </tr>

                    }
                </table> 
                }
             
                    
                    
                    
                }

              

        </div>
    </div>
</section>
<!-- /.content -->